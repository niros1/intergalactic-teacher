# Application Settings
APP_NAME="Intergalactic Teacher API"
APP_VERSION="0.1.0"
ENVIRONMENT=development
DEBUG=true

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=3000
REFRESH_TOKEN_EXPIRE_DAYS=30

# Database Configuration
DATABASE_URL=postgresql://intergalactic:password@db:5432/intergalactic_teacher
DATABASE_HOST=db
DATABASE_PORT=5432
DATABASE_USER=intergalactic
DATABASE_PASSWORD=password
DATABASE_NAME=intergalactic_teacher

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Ollama Configuration (AI Model)
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_MODEL=llama3.2:latest
OLLAMA_MAX_TOKENS=4000
OLLAMA_TEMPERATURE=0.7

# Content Safety
CONTENT_SAFETY_ENABLED=true
CONTENT_SAFETY_THRESHOLD=0.5

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:8080"]

# LangSmith Configuration (Optional - for AI monitoring)
LANGSMITH_TRACING=false
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=your_project_name

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# File Upload
MAX_UPLOAD_SIZE=5242880
ALLOWED_EXTENSIONS=[".jpg",".jpeg",".png",".gif"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090

# Instructions:
# 1. Copy this file to .env
# 2. Replace placeholders with actual values
# 3. NEVER commit .env to version control
